@model WebApplication1.ViewModels.PostAndProposelViewModel

@{
    ViewBag.Title = "Index";
}

<br />
<h2>My Requests</h2>

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <table class="table">
                <tr>
                    <th>Job Type</th>
                    <th>Job Budget</th>                   
                </tr>

                @foreach (var post in Model.PostJob)
                {
                    <tr>

                        <td>@post.JobType</td>
                        <td>@post.JobBudget $</td>                       
                    </tr>
                }
            </table>
        </div>
        <div class="col-lg-6">
            <table class="table">
                <tr>
                    <th>The Proposal</th>

                    <th>Actions</th>
                </tr>

                @foreach (var proposal in Model.Proposals)
                {
                    <tr>
                        @if (proposal.IsAccepted == null)
                        {
                            <td>@proposal.TheProposal</td>

                            <td>
                                @Html.ActionLink("Approve", "Approve", new { id = proposal.IdOfProposal }) |

                                @Html.ActionLink("Reject", "Reject", new { id = proposal.IdOfProposal })
                            </td>
                        }
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
